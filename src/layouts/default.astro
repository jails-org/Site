---
import GoogleFonts from 'shared/_components/google-fonts/index.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<title>Jails | An Elegant and Minimalistic Javascript Application Library</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.svg" />
		<GoogleFonts family={['Roboto:300,400,700']} />
		<style>
			@import "tailwindcss";
		</style>
		<slot name="head" />
		<script>
			import { main } from 'shared/main' 
			document.addEventListener( 'DOMContentLoaded', () => {
				main()
			})
		</script>
	</head>
	<body>
		<x-application id="site" class="min-h-screen flex flex-col justify-between">
            <slot name="content" />
		</x-application>
		<slot name="footer" />
		<!-- Google tag (gtag.js) -->
		<script is:inline data-name="analytics" type="text/third-party" src="https://www.googletagmanager.com/gtag/js?id=G-621623ZSE9">
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments)};
			gtag('js', new Date());
			gtag('config', 'G-621623ZSE9');
		</script>
	</body>
</html>


			+above('tablet')
				display grid
				grid-template-columns 1fr 1fr 1fr
				gap 30px

			li
				font-weight 300
				border 1px solid rgb(51, 65, 85)
				border-radius 10px
				padding 30px

				+below('tablet')
					margin 20px 0 60px

		&__icon
			font-size 60px
			text-align center

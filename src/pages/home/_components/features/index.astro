<style lang="styl">

	.features
		//

		+below('mobile')
			img
				max-width 100%

		&__content
			display flex
			justify-content space-between
			align-items center
			max-width 1024px
			margin 0 auto

			+below('mobile')
				display block
				padding 50px 0

		&__list
			list-style none

			li:nth-of-type(2n-1)
				background #fafafa

			> li
				font-weight 300


				+above('tablet')
					padding 100px 0

				img
					display block

			h2
				font-size 20px
				color #00568b
				font-weight bold

			h3
				font-size 30px
				line-height 1.2
				margin 10px 0

		.code-example
			box-shadow rgba(0, 0, 0, 0.15) 0px 5px 15px
			border-radius 5px

		.col-lg
			flex .5

		.col-md
			flex .4

		.col-lg, .col-md
			+below('tablet')
				padding 30px 0 0
				text-align center

		.col-center
			text-align center
			width 100%

		&__icon
			font-size 100px
			display inline-block
			color orange

		&__ecossystem
			display flex
			justify-content center
			align-items flex-end
			margin 50px 0
			list-style none
			flex-wrap wrap
			gap 30px

			li
				margin 0 20px
				font-size 100px
				display flex
				align-items center

				*
					font-weight bold
					color #888

				img
					max-width 150px

</style>

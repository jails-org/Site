---
import Container from 'shared/_components/container/index.astro'
---

<script>
	import { register, dependencies } from 'shared/main'
	import * as header from './index'
	register('x-header', header, dependencies)
</script>

<x-header class="header" html-class="fixed?'fixed':''">
	<Container class="header__container">
		<h1 class="header__logo">
			<img  src="//jails-org.github.io/images/logo.svg" alt="Jails Logo" />
			<span class="header__logo-text">Jails.js</span>
		</h1>
		<nav class="header__menu">
			<a href="https://jails-org.github.io/" target="_blank">Documentation</a>
			<a href="https://stackblitz.com/@Javiani/collections/jails-organization" target="_blank">Examples</a>
			<a href="https://github.com/jails-org/Jails" target="_blank">Github</a>
			<a href="https://github.com/jails-org/Jails/discussions" target="_blank">Discussions</a>
		</nav>
	</Container>
</x-header>

<style lang="styl">
	.header
		position fixed
		top 0
		left 0
		width 100%
		background-color #0f172a


		&__container
			position relative
			display flex
			align-items center
			padding 0px 20px
			+below('mobile')
				display block

		&__logo
			display flex
			margin-bottom 10px
			padding 10px 0
			&-text
				color $color-white
			img
				max-width 48px
				margin-right 10px

		&__menu
			display flex
			justify-content space-between
			text-transform uppercase
			padding-bottom 20px
			margin-left auto

			a
				color $color-white
				text-decoration none
				margin 0

				+below('mobile')
					font-size 14px

				+above('tablet')
					margin 0 20px

</style>

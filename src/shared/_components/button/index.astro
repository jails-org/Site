---
const { href } = Astro.props
const Tag = href ? 'a' : 'button'
---

<Tag {...Astro.props} class={`button`} >
	<slot />
</Tag>

<style lang="styl">
	.button
		background none
		border none
		padding 10px 20px
		color $color-white
		background #2255aacf
		border-radius 20px
		cursor pointer
</style>
